
@model LMS.Models.investment_proforma


@{
    ViewBag.Title = "Investment Breakup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container">
    <h2 class="text-center">Reports</h2>
    <h6 class="text-center h6">Investment Breakup</h6>
    <table class="table" id="performa">
        <thead>
            <!--<tr>

                <th colspan="9" class="text-center">Advances Breakup</th>-->
            @*<th></th>*@
            @*<th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>*@
            <!--</tr>-->
            <tr>
                <th></th>
                <th>Stage 1</th>
                <th>Stage 2</th>
                <th>Stage 3</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td colspan="3">--------------------------------------------------------------------------------(Rupees in '000)--------------------------------------------------------------------------------</td>
                <td></td>
                <td></td>
                <td></td>

            </tr>
            <tr class="bg-info">
                <td class=" ">Performing</td>
                <td colspan="3"></td>
                <td></td>
                <td></td>
                <td></td>

            </tr>
            <tr style="background-color:#C9E7F2">
                <td>Investment grade   </td>
                <td>@Model.grade_stage_1.ToString("#,##0.00")</td>
                <td>@Model.grade_stage_2.ToString("#,##0.00")</td>
                <td>@Model.grade_stage_3.ToString("#,##0.00")</td>
                <td colspan="3">@Model.grade_total.ToString("#,##0.00")</td>

            </tr>
            <tr style="background-color:#C9E7F2">
                <td>
                    Non-investment grade
                </td>
                <td>@Model.non_grade_stage_1.ToString("#,##0.00")</td>
                <td>@Model.non_grade_stage_2.ToString("#,##0.00")</td>
                <td>@Model.non_grade_3.ToString("#,##0.00")</td>
                <td colspan="3">@Model.non_grade_total.ToString("#,##0.00")</td>

            </tr>
            <tr class="bg-info">
                <td>Non-Performing</td>
                <td colspan="3"></td>
                <td></td>
                <td></td>
                <td></td>

            </tr>
            <tr class="text-danger" style="background-color:#C9E7F2">
                <td>Substandard   </td>
                <td>@Model.substandard_stage_1.ToString("#,##0.00")</td>
                <td>@Model.substandard_stage_2.ToString("#,##0.00")</td>
                <td>@Model.substandard_stage_3.ToString("#,##0.00")</td>
                <td colspan="3">@Model.substandard_stage_total.ToString("#,##0.00")</td>

            </tr>
            <tr class="text-danger" style="background-color:#C9E7F2">
                <td>Doubtful   </td>
                <td>@Model.doubtful_stage_1.ToString("#,##0.00")</td>
                <td>@Model.doubtful_stage_2.ToString("#,##0.00")</td>
                <td>@Model.doubtful_stage_3.ToString("#,##0.00")</td>
                <td colspan="3">@Model.doubtful_stage_total.ToString("#,##0.00")</td>

            </tr>
            <tr class="text-danger" style="background-color:#C9E7F2">
                <td>Loss  </td>
                <td>@Model.loss_stage_1.ToString("#,##0.00")</td>
                <td>@Model.loss_stage_2.ToString("#,##0.00")</td>
                <td>@Model.loss_stage_3.ToString("#,##0.00")</td>
                <td colspan="3">@Model.loss_stage_total.ToString("#,##0.00")</td>

            </tr>
            <tr>
                <td> Total  </td>
                <td><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.stage_1.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>
                <td><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.stage_2.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>
                <td><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.stage_3.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>
                <td colspan="3"><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.total_stages.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>

            </tr>
            <tr>
                <td></td>
                <td colspan="3"></td>
                <td></td>
                <td></td>
                <td></td>

            </tr>
            <tr>
                <td></td>
                <td colspan="3"></td>
                <td></td>
                <td></td>
                <td></td>

            </tr>
            <tr class="bg-info">
                <td>ECL - Breakup</td>
                <td colspan="3"></td>
                <td></td>
                <td></td>
                <td></td>

            </tr>

            <tr>
                <td>
                    ECL
                </td>
                <td><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.ecl_stage_1.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>
                <td><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.ecl_stage_2.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>
                <td><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.ecl_stage_3.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>
                <td colspan="3"><hr style="height:0.5px;background-color:black; width:100%" /><span>@Model.ecl_stage_total.ToString("#,##0.00")</span><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin:0" /><hr style="height:0.5px;background-color:black; width:100%;padding:0;margin-top:0.5px" /></td>

            </tr>
            @*<tr>
            <th>

            </th>
        </tr>*@
        </tbody>

    </table>

</section>
<script>
    $(document).on('ready', function () {
        $("#performa").DataTable({
            dom: 'Bfrtip',
            "ordering": false,
            "pageLength": 50,
            buttons: [
                { extend: 'copyHtml5', footer: true },
                { extend: 'excelHtml5', footer: true },
                { extend: 'csvHtml5', footer: true },
                { extend: 'pdfHtml5', footer: true }
            ],
            "order": [[0, "asc"]],
            footer: true,
        });
    })
</script>


