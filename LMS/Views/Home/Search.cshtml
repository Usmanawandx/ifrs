                            <table width="100%">
                                <tbody>
                                    <tr>
                                        <td width="55%">
                                            <div class="progress CustomProgress">
                                                <div id="GDFileProgress" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                                    <span></span>
                                                </div>
                                            </div>
