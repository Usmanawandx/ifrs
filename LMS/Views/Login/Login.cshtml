@model LMS.Models.user

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ECL Calculator</title>

    <script>
        function preventBack() {
            window.history.forward();
        }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
        document.addEventListener('contextmenu', function (e) {
            e.preventDefault();
        });
        document.onkeydown = function (e) {
            if (event.keyCode == 123) {
                return false;
            }
            if (e.ctrlKey && e.shiftKey && e.keyCode == 'I'.charCodeAt(0)) {
                return false;
            }
            if (e.ctrlKey && e.shiftKey && e.keyCode == 'C'.charCodeAt(0)) {
                return false;
            }
            if (e.ctrlKey && e.shiftKey && e.keyCode == 'J'.charCodeAt(0)) {
                return false;
            }
            if (e.ctrlKey && e.keyCode == 'U'.charCodeAt(0)) {
                return false;
            }
        }

    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" type="image/png" href="https://assets.ey.com/etc/designs/zg/eydff/desktop/assets/img/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            @*<div class="panel panel-primary">
                    <div class="panel-heading">Panel with panel-primary class</div>
                    <div class="panel-body">Panel Content</div>
                </div>*@
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading"><span><i class="fa fa-user"></i></span> Login</div>
                            <div class="panel-body">
                                @if (!String.IsNullOrEmpty(ViewBag.Error))
                                {

                                    <h4 class="text-capitalize text-danger">@ViewBag.Error <span><i class="fas fa-exclamation-circle"></i></span></h4>

                                }
                                @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-envelope"></i>
                                            </div>
                                            @*@Html.LabelFor(m => m.email, "Email", new { @class = "label label-default" })*@
                                            @Html.TextBoxFor(m => m.email, new { type = "text", @class = "form-control", required = "required", autocomplete = "off" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-lock"></i>
                                            </div>
                                            @*@Html.LabelFor(m => m.email, "Email", new { @class = "label label-default" })*@
                                            @*@Html.TextBoxFor(m => m.email, new { type = "email", @class = "form-control", required = "required", autocomplete = "off" })*@
                                            @Html.TextBoxFor(m => m.password, new { type = "password", @class = "form-control", required = "required" })
                                        </div>
                                        @*@Html.LabelFor(m => m.password, "Password", new { @class = "label label-default" })*@
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="Login" id="btnSubmit" />
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>